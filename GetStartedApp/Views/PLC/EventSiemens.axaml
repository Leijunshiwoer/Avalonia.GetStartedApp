<UserControl x:Class="GetStartedApp.EventSiemens"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:vm="clr-namespace:GetStartedApp.ViewModels.PLC;assembly=GetStartedApp"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:EventSiemensViewModel"
             mc:Ignorable="d">
    <Grid RowDefinitions="auto,*">
        <u:ToolBar Grid.Row="0">
            <u:IconButton Command="{Binding ConnMqttCmd}" Content="连接Mqtt服务">
                <u:IconButton.Icon>
                    <i:Icon FontSize="24"
                            Foreground="DarkBlue"
                            Value="mdi-plus" />
                </u:IconButton.Icon>
            </u:IconButton>

            <TextBlock Grid.Column="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Foreground="Blue"
                       Text="{Binding MqttStatus}" />
        </u:ToolBar>

        <DataGrid x:Name="dgMqtt"
                  Grid.Row="1"
                  ItemsSource="{Binding ObMqttMessage}">

            <DataGrid.Columns>
                <DataGridTextColumn Width="300"
                                    Binding="{Binding FTopic}"
                                    Header="主题" />
                <DataGridTextColumn Width="500"
                                    Binding="{Binding FMessage}"
                                    Header="消息" />

                <DataGridTextColumn Width="180"
                                    Binding="{Binding FRecivedTime}"
                                    Header="请求时间" />

            </DataGrid.Columns>
        </DataGrid>
        <!--<DataGrid x:Name="dg"
