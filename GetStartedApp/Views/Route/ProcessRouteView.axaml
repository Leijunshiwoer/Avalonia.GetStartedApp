                                                  Content="删除">
                                        <u:IconButton.Icon>
                                            <i:Icon FontSize="24"
                                                    Foreground="DarkBlue"
                                                    Value="mdi-delete" />
                                        </u:IconButton.Icon>
                                    </u:IconButton>-->
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <cc:Pagination Grid.Row="2"
                                   HorizontalAlignment="Left"
                                   IsBackendPaging="False"
                                   ItemsPerPage="{Binding ProcessItemsPerPage}"
                                   ItemsSource="{Binding AllProcesss}"
                                   PageChangedCommand="{Binding ProcessPageChangedCommand}" />

                </Grid>
