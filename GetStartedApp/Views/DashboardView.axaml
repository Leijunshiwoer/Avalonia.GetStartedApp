<UserControl x:Class="GetStartedApp.Views.DashboardView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:vm="clr-namespace:GetStartedApp.ViewModels"
             d:DesignHeight="350"
             d:DesignWidth="500"
             x:CompileBindings="True"
             x:DataType="vm:DashboardViewModel"
             mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style Selector="StackPanel">
            <Setter Property="Margin" Value="10" />
        </Style>
    </UserControl.Styles>
    <Grid RowDefinitions="auto,auto,auto,*">
        <u:Form LabelPosition="Left" LabelWidth="*">
            <TextBox Width="300"
                     u:FormItem.IsRequired="True"
                     u:FormItem.Label="Name" />
            <TextBox Width="300" u:FormItem.Label="Email" />
            <TextBox Width="300"
                     u:FormItem.Label="Message"
                     Classes="TextArea" />
        </u:Form>
    </Grid>
</UserControl>