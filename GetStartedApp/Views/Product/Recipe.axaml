<UserControl x:Class="GetStartedApp.Recipe"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GetStartedApp.Utils;assembly=GetStartedApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:type="clr-namespace:GetStartedApp.Models;assembly=GetStartedApp"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:vm="clr-namespace:GetStartedApp.ViewModels.Product;assembly=GetStartedApp"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:RecipeViewModel"
             mc:Ignorable="d">
    <Grid ColumnDefinitions="auto,*">
        <Border Grid.Column="0"
                Margin="10"
                Background="White"
                BorderBrush="Silver"
                BorderThickness="2"
                CornerRadius="10">
            <TreeView BorderThickness="0"
                      ItemsSource="{Binding VersionTree}"
                      SelectedItem="{Binding selectedItem}"
                      SelectionMode="Single">
                <TreeView.Styles>
                    <Style Selector="TreeViewItem">
                        <Setter Property="IsExpanded" Value="True" />
                    </Style>
                </TreeView.Styles>
                <TreeView.ItemTemplate>
                    <TreeDataTemplate DataType="type:VersionPrimaryDto" ItemsSource="{Binding VersionSeconds}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Code}" />
                            <TextBlock Text="{Binding Name, StringFormat='({0})'}" />
                        </StackPanel>
                    </TreeDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Border>
        <Grid Grid.Column="1" RowDefinitions="auto,*,auto">
            <Grid Grid.Row="0" ColumnDefinitions="2*,*,*">
                <TextBlock Grid.Column="0"
                           HorizontalAlignment="Center"
                           FontSize="30"
                           FontWeight="Bold"
                           Text="OP10" />
                <TextBlock Grid.Column="1"
                           FontSize="30"
                           FontWeight="Bold"
                           Text="OP20" />
                <TextBlock Grid.Column="2"
                           FontSize="30"
                           FontWeight="Bold"
                           Text="OP30" />
            </Grid>
            <Grid Grid.Row="1" ColumnDefinitions="*,*,*">
                <Border Grid.Column="0"
                        Margin="10"
                        Background="WhiteSmoke"
                        CornerRadius="25">
                    <ScrollViewer Width="350"
                                  Padding="10"
                                  HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding OP10Datas}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Margin="3,7,3,5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="5"
                                            Padding="10"
                                            Background="White"
                                            CornerRadius="15">
                                        <StackPanel>
                                            <TextBlock FontSize="15"
                                                       FontWeight="Bold"
                                                       Foreground="Blue"
                                                       Text="{Binding Name}" />
                                            <ItemsControl DataContext="{Binding}" ItemsSource="{Binding Parameters}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <local:ConditionTemplateSelector>
                                                        <local:ConditionTemplateSelector.ComboBoxTemplate>
                                                            <DataTemplate DataType="type:RecipeSTParameterDto">
                                                                <WrapPanel>
                                                                    <Label Margin="5,0,0,0" Content="{Binding Name}" />
                                                                    <ComboBox Width="180"
                                                                              Margin="5"
                                                                              ItemsSource="{Binding Items}"
                                                                              SelectedIndex="{Binding Value}" />
                                                                </WrapPanel>
                                                            </DataTemplate>
                                                        </local:ConditionTemplateSelector.ComboBoxTemplate>

                                                        <local:ConditionTemplateSelector.TextBoxTemplate>
                                                            <DataTemplate DataType="type:RecipeSTParameterDto">
                                                                <WrapPanel>
                                                                    <Label Margin="5,0,0,0" Content="{Binding Name}" />
                                                                    <u:NumericDecimalUpDown Width="180"
                                                                                            Margin="5"
                                                                                            Step="0.1"
                                                                                            Value="{Binding Value}" />
                                                                </WrapPanel>

                                                            </DataTemplate>
                                                        </local:ConditionTemplateSelector.TextBoxTemplate>
                                                    </local:ConditionTemplateSelector>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <Border Grid.Column="1"
                        Margin="10"
                        Background="WhiteSmoke"
                        CornerRadius="25">
                    <ScrollViewer Width="350"
                                  Padding="10"
                                  HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding OP20Datas}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Margin="3,7,3,5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="5"
                                            Padding="10"
                                            Background="White"
                                            CornerRadius="15">
                                        <StackPanel>
                                            <TextBlock FontSize="15"
                                                       FontWeight="Bold"
                                                       Foreground="Blue"
                                                       Text="{Binding Name}" />
                                            <ItemsControl DataContext="{Binding}" ItemsSource="{Binding Parameters}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <local:ConditionTemplateSelector>
                                                        <local:ConditionTemplateSelector.ComboBoxTemplate>
                                                            <DataTemplate DataType="type:RecipeSTParameterDto">
                                                                <WrapPanel>
                                                                    <Label Margin="5,0,0,0" Content="{Binding Name}" />
                                                                    <ComboBox Width="180"
                                                                              Margin="5"
                                                                              ItemsSource="{Binding Items}"
                                                                              SelectedIndex="{Binding Value}" />
                                                                </WrapPanel>
                                                            </DataTemplate>
                                                        </local:ConditionTemplateSelector.ComboBoxTemplate>

                                                        <local:ConditionTemplateSelector.TextBoxTemplate>
                                                            <DataTemplate DataType="type:RecipeSTParameterDto">
                                                                <WrapPanel>
                                                                    <Label Margin="5,0,0,0" Content="{Binding Name}" />
                                                                    <u:NumericDecimalUpDown Width="180"
                                                                                            Margin="5"
                                                                                            Step="0.1"
                                                                                            Value="{Binding Value}" />
                                                                </WrapPanel>

                                                            </DataTemplate>
                                                        </local:ConditionTemplateSelector.TextBoxTemplate>
                                                    </local:ConditionTemplateSelector>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                <Border Grid.Column="2"
                        Margin="10"
                        Background="WhiteSmoke"
                        CornerRadius="25">
                    <ScrollViewer Width="350"
                                  Padding="10"
                                  HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding OP30Datas}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Margin="3,7,3,5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="5"
                                            Padding="10"
                                            Background="White"
                                            CornerRadius="15">
                                        <StackPanel>
                                            <TextBlock FontSize="15"
                                                       FontWeight="Bold"
                                                       Foreground="Blue"
                                                       Text="{Binding Name}" />
                                            <ItemsControl DataContext="{Binding}" ItemsSource="{Binding Parameters}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>

                                                <ItemsControl.ItemTemplate>
                                                    <local:ConditionTemplateSelector>
                                                        <local:ConditionTemplateSelector.ComboBoxTemplate>
                                                            <DataTemplate DataType="type:RecipeSTParameterDto">
                                                                <WrapPanel>
                                                                    <Label Margin="5,0,0,0" Content="{Binding Name}" />
                                                                    <ComboBox Width="180"
                                                                              Margin="5"
                                                                              ItemsSource="{Binding Items}"
                                                                              SelectedIndex="{Binding Value}" />
                                                                </WrapPanel>
                                                            </DataTemplate>
                                                        </local:ConditionTemplateSelector.ComboBoxTemplate>

                                                        <local:ConditionTemplateSelector.TextBoxTemplate>
                                                            <DataTemplate DataType="type:RecipeSTParameterDto">
                                                                <WrapPanel>
                                                                    <Label Margin="5,0,0,0" Content="{Binding Name}" />
                                                                    <u:NumericDecimalUpDown Width="180"
                                                                                            Margin="5"
                                                                                            Step="0.1"
                                                                                            Value="{Binding Value}" />
                                                                </WrapPanel>

                                                            </DataTemplate>
                                                        </local:ConditionTemplateSelector.TextBoxTemplate>
                                                    </local:ConditionTemplateSelector>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
