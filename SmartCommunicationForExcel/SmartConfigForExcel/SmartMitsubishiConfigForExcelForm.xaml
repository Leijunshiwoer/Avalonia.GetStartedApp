<Window x:Class="SmartCommunicationForExcel.SmartConfigForExcel.SmartMitsubishiConfigForExcelForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartCommunicationForExcel.SmartConfigForExcel"
        mc:Ignorable="d"
        Title="SmartMisubishiConfigForExcelForm" Height="800" Width="1200">
    <Grid>
        <TabControl>
            <TabItem Header="CpuInfo">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="20">
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="CpuType"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="PlcType"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="Mark"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="Name"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="EapConfigBeginAddress"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="EapConfigBeginOffset"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="EapEventBeginAddress"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="EapEventBeginOffset"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="PlcConfigBeginAddress"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="PlcConfigBeginOffset"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="PlcEventBeginAddress"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="PlcEventBeginOffset"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="IP"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="Port1"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Blue" Text="Port2"/>
                    </StackPanel>
                    <StackPanel Margin="20" Grid.Column="1">
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbCpuType" Text="CpuType"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbPlcType" Text="PlcType"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbMark" Text="Mark"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbName" Text="Name"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbEapConfigBeginAddress" Text="EapConfigBeginAddress"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbEapConfigBeginOffset" Text="EapConfigBeginOffset"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbEapEventBeginAddress" Text="EapEventBeginAddress"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbEapEventBeginOffset" Text="EapEventBeginOffset"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbPlcConfigBeginAddress" Text="PlcConfigBeginAddress"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbPlcConfigBeginOffset" Text="PlcConfigBeginOffset"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbPlcEventBeginAddress" Text="PlcEventBeginAddress"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbPlcEventBeginOffset" Text="PlcEventBeginOffset"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbIP" Text="IP"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbPort1" Text="Port1"/>
                        <TextBlock Margin="0 0 0 10" Foreground="Black" Name="lbPort2" Text="Port2"/>
                    </StackPanel>
                    <Button Grid.Column="3" Content="刷新" Width="60" Background="Orange" Click="Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="EapConfig">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lvEapConfig">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="No" Width="80" DisplayMemberBinding="{Binding No}"/>
                                    <GridViewColumn Header="DateValue" Width="200" DisplayMemberBinding="{Binding DateValue}"/>
                                    <GridViewColumn Header="Length" Width="60" DisplayMemberBinding="{Binding Length}"/>
                                    <GridViewColumn Header="MBAdr" Width="80" DisplayMemberBinding="{Binding MBAdr}"/>
                                    <GridViewColumn Header="MEAdr" Width="80" DisplayMemberBinding="{Binding MEAdr}"/>
                                    <GridViewColumn Header="DTType" Width="80" DisplayMemberBinding="{Binding DTType}"/>
                                    <GridViewColumn Header="Mark" Width="160" DisplayMemberBinding="{Binding Mark}"/>
                                    <GridViewColumn Header="TagName" Width="120" DisplayMemberBinding="{Binding TagName}"/>
                                    <GridViewColumn Header="GlobalBeginAddress" Width="100" DisplayMemberBinding="{Binding GlobalBeginAddress}"/>
                                    <GridViewColumn Header="GlobalBeginOffset" Width="100" DisplayMemberBinding="{Binding GlobalBeginOffset}"/>
                                    <GridViewColumn Header="GetMBAddressTag" Width="100" DisplayMemberBinding="{Binding GetMBAddressTag}"/>
                                    <GridViewColumn Header="GetMEAddressTag" Width="100" DisplayMemberBinding="{Binding GetMEAddressTag}"/>
                                    <GridViewColumn Header="DataFormat" Width="80" DisplayMemberBinding="{Binding DataFormat}"/>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Grid.Column="1" Content="刷新" Width="60" Background="Orange" Click="Button_Click"/>
                </Grid>
               
            </TabItem>
            <TabItem Header="PlcConfig">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lvPlcConfig">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="No" Width="80" DisplayMemberBinding="{Binding No}"/>
                                    <GridViewColumn Header="DateValue" Width="200" DisplayMemberBinding="{Binding DateValue}"/>
                                    <GridViewColumn Header="Length" Width="60" DisplayMemberBinding="{Binding Length}"/>
                                    <GridViewColumn Header="MBAdr" Width="80" DisplayMemberBinding="{Binding MBAdr}"/>
                                    <GridViewColumn Header="MEAdr" Width="80" DisplayMemberBinding="{Binding MEAdr}"/>
                                    <GridViewColumn Header="DTType" Width="80" DisplayMemberBinding="{Binding DTType}"/>
                                    <GridViewColumn Header="Mark" Width="160" DisplayMemberBinding="{Binding Mark}"/>
                                    <GridViewColumn Header="TagName" Width="120" DisplayMemberBinding="{Binding TagName}"/>
                                    <GridViewColumn Header="GlobalBeginAddress" Width="100" DisplayMemberBinding="{Binding GlobalBeginAddress}"/>
                                    <GridViewColumn Header="GlobalBeginOffset" Width="100" DisplayMemberBinding="{Binding GlobalBeginOffset}"/>
                                    <GridViewColumn Header="GetMBAddressTag" Width="100" DisplayMemberBinding="{Binding GetMBAddressTag}"/>
                                    <GridViewColumn Header="GetMEAddressTag" Width="100" DisplayMemberBinding="{Binding GetMEAddressTag}"/>
                                    <GridViewColumn Header="DataFormat" Width="80" DisplayMemberBinding="{Binding DataFormat}"/>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Grid.Column="1" Content="刷新" Width="60" Background="Orange" Click="Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="EventConfig">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <TextBlock Text="事件头信息进行筛选" Foreground="Blue" VerticalAlignment="Center"/>
                        <ComboBox Margin="10 0 0 0" Name="comboBox1" Width="600"/>
                        <Button Margin="8 0 0 0" Content="刷新" Width="60" Background="Orange" Click="Button_Click"/>
                    </StackPanel>
                    <ListView x:Name="lvEventConfigPC" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="No" Width="80" DisplayMemberBinding="{Binding No}"/>
                                    <GridViewColumn Header="DateValue" Width="200" DisplayMemberBinding="{Binding DateValue}"/>
                                    <GridViewColumn Header="Length" Width="60" DisplayMemberBinding="{Binding Length}"/>
                                    <GridViewColumn Header="MBAdr" Width="80" DisplayMemberBinding="{Binding MBAdr}"/>
                                    <GridViewColumn Header="MEAdr" Width="80" DisplayMemberBinding="{Binding MEAdr}"/>
                                    <GridViewColumn Header="DTType" Width="80" DisplayMemberBinding="{Binding DTType}"/>
                                    <GridViewColumn Header="Mark" Width="160" DisplayMemberBinding="{Binding Mark}"/>
                                    <GridViewColumn Header="TagName" Width="120" DisplayMemberBinding="{Binding TagName}"/>
                                    <GridViewColumn Header="GlobalBeginAddress" Width="100" DisplayMemberBinding="{Binding GlobalBeginAddress}"/>
                                    <GridViewColumn Header="GlobalBeginOffset" Width="100" DisplayMemberBinding="{Binding GlobalBeginOffset}"/>
                                    <GridViewColumn Header="GetMBAddressTag" Width="100" DisplayMemberBinding="{Binding GetMBAddressTag}"/>
                                    <GridViewColumn Header="GetMEAddressTag" Width="100" DisplayMemberBinding="{Binding GetMEAddressTag}"/>
                                    <GridViewColumn Header="DataFormat" Width="80" DisplayMemberBinding="{Binding DataFormat}"/>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView x:Name="lvEventConfigPLC" Grid.Row="2">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="No" Width="80" DisplayMemberBinding="{Binding No}"/>
                                    <GridViewColumn Header="DateValue" Width="200" DisplayMemberBinding="{Binding DateValue}"/>
                                    <GridViewColumn Header="Length" Width="60" DisplayMemberBinding="{Binding Length}"/>
                                    <GridViewColumn Header="MBAdr" Width="80" DisplayMemberBinding="{Binding MBAdr}"/>
                                    <GridViewColumn Header="MEAdr" Width="80" DisplayMemberBinding="{Binding MEAdr}"/>
                                    <GridViewColumn Header="DTType" Width="80" DisplayMemberBinding="{Binding DTType}"/>
                                    <GridViewColumn Header="Mark" Width="160" DisplayMemberBinding="{Binding Mark}"/>
                                    <GridViewColumn Header="TagName" Width="120" DisplayMemberBinding="{Binding TagName}"/>
                                    <GridViewColumn Header="GlobalBeginAddress" Width="100" DisplayMemberBinding="{Binding GlobalBeginAddress}"/>
                                    <GridViewColumn Header="GlobalBeginOffset" Width="100" DisplayMemberBinding="{Binding GlobalBeginOffset}"/>
                                    <GridViewColumn Header="GetMBAddressTag" Width="100" DisplayMemberBinding="{Binding GetMBAddressTag}"/>
                                    <GridViewColumn Header="GetMEAddressTag" Width="100" DisplayMemberBinding="{Binding GetMEAddressTag}"/>
                                    <GridViewColumn Header="DataFormat" Width="80" DisplayMemberBinding="{Binding DataFormat}"/>
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Label Content="PC" Background="Green" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="PLC" Background="Blue" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
