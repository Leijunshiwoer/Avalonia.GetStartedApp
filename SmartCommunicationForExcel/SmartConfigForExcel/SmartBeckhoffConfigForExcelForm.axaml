<Window x:Class="SmartCommunicationForExcel.SmartConfigForExcel.SmartBeckhoffConfigForExcelForm"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SmartCommunicationForExcel.SmartConfigForExcel"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="SmartBeckhoffConfigForExcelForm"
        Width="1200"
        Height="800"
        mc:Ignorable="d">
    <Grid>
        <TabControl>
            <!--  CPU Info 标签页  -->
            <TabItem Header="CPU信息">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="20">
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="CPU类型" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="PLC类型" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="标识" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="名称" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="EAP标签名" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="EAP配置起始地址" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="EAP配置起始偏移量" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="EAP事件起始地址" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="EAP事件起始偏移量" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="PLC标签名" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="PLC配置起始地址" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="PLC配置起始偏移量" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="PLC事件起始地址" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="PLC事件起始偏移量" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="IP地址" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="端口" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="目标网络ID" />
                        <TextBlock Margin="0,0,0,10"
                                   Foreground="Blue"
                                   Text="发送方网络ID" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="20">
                        <TextBlock Name="lbCpuType"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="CPU类型" />
                        <TextBlock Name="lbPlcType"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="PLC类型" />
                        <TextBlock Name="lbMark"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="标识" />
                        <TextBlock Name="lbName"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="名称" />
                        <TextBlock Name="lbEapLabelName"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="EAP标签名" />
                        <TextBlock Name="lbEapConfigBeginAddress"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="EAP配置起始地址" />
                        <TextBlock Name="lbEapConfigBeginOffset"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="EAP配置起始偏移量" />
                        <TextBlock Name="lbEapEventBeginAddress"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="EAP事件起始地址" />
                        <TextBlock Name="lbEapEventBeginOffset"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="EAP事件起始偏移量" />
                        <TextBlock Name="lbPlcLabelName"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="PLC标签名" />
                        <TextBlock Name="lbPlcConfigBeginAddress"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="PLC配置起始地址" />
                        <TextBlock Name="lbPlcConfigBeginOffset"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="PLC配置起始偏移量" />
                        <TextBlock Name="lbPlcEventBeginAddress"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="PLC事件起始地址" />
                        <TextBlock Name="lbPlcEventBeginOffset"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="PLC事件起始偏移量" />
                        <TextBlock Name="lbIP"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="IP地址" />
                        <TextBlock Name="lbPort"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="端口" />
                        <TextBlock Name="lbTargetNetId"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="目标网络ID" />
                        <TextBlock Name="lbSenderNetId"
                                   Margin="0,0,0,10"
                                   Foreground="Black"
                                   Text="发送方网络ID" />
                    </StackPanel>
                    <Button Grid.Column="3"
                            Width="60"
                            Background="Orange"
                            Click="Button_Click"
                            Content="刷新" />
                </Grid>
            </TabItem>

            <!--  EapConfig 标签页 - 使用 DataGrid 替代 ListView  -->
            <TabItem Header="Eap配置">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="lvEapConfig"
                              x:DataType="local:MyConfig"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding No}"
                                                Header="序号" />
                            <DataGridTextColumn Width="200"
                                                Binding="{Binding DateValue}"
                                                Header="数据值" />
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding Length}"
                                                Header="长度" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding MBAdr}"
                                                Header="MB地址" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding MEAdr}"
                                                Header="ME地址" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding DTType}"
                                                Header="数据类型" />
                            <DataGridTextColumn Width="160"
                                                Binding="{Binding Mark}"
                                                Header="标识" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding TagName}"
                                                Header="标签名称" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GlobalBeginAddress}"
                                                Header="全局起始地址" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GlobalBeginOffset}"
                                                Header="全局起始偏移量" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GetMBAddressTag}"
                                                Header="获取MB地址标签" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GetMEAddressTag}"
                                                Header="获取ME地址标签" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding DataFormat}"
                                                Header="数据格式" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Grid.Column="1"
                            Width="60"
                            Background="Orange"
                            Click="Button_Click"
                            Content="刷新" />
                </Grid>
            </TabItem>

            <!--  PlcConfig 标签页 - 使用 DataGrid 替代 ListView  -->
            <TabItem Header="PLC配置">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="lvPlcConfig"
                              x:DataType="local:MyConfig"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding No}"
                                                Header="序号" />
                            <DataGridTextColumn Width="200"
                                                Binding="{Binding DateValue}"
                                                Header="数据值" />
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding Length}"
                                                Header="长度" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding MBAdr}"
                                                Header="MB地址" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding MEAdr}"
                                                Header="ME地址" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding DTType}"
                                                Header="数据类型" />
                            <DataGridTextColumn Width="160"
                                                Binding="{Binding Mark}"
                                                Header="标识" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding TagName}"
                                                Header="标签名称" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GlobalBeginAddress}"
                                                Header="全局起始地址" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GlobalBeginOffset}"
                                                Header="全局起始偏移量" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GetMBAddressTag}"
                                                Header="获取MB地址标签" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GetMEAddressTag}"
                                                Header="获取ME地址标签" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding DataFormat}"
                                                Header="数据格式" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Grid.Column="1"
                            Width="60"
                            Background="Orange"
                            Click="Button_Click"
                            Content="刷新" />
                </Grid>
            </TabItem>

            <!--  EventConfig 标签页 - 使用 DataGrid 替代 ListView  -->
            <TabItem Header="事件配置">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="Blue"
                                   Text="事件头信息进行筛选" />
                        <ComboBox Name="comboBox1"
                                  Width="600"
                                  Margin="10,0,0,0" />
                        <Button Width="60"
                                Margin="8,0,0,0"
                                Background="Orange"
                                Click="Button_Click"
                                Content="刷新" />
                    </StackPanel>

                    <!--  PC 事件列表  -->
                    <DataGrid x:Name="lvEventConfigPC"
                              Grid.Row="1"
                              x:DataType="local:MyConfig"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding No}"
                                                Header="序号" />
                            <DataGridTextColumn Width="200"
                                                Binding="{Binding DateValue}"
                                                Header="数据值" />
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding Length}"
                                                Header="长度" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding MBAdr}"
                                                Header="MB地址" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding MEAdr}"
                                                Header="ME地址" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding DTType}"
                                                Header="数据类型" />
                            <DataGridTextColumn Width="160"
                                                Binding="{Binding Mark}"
                                                Header="标识" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding TagName}"
                                                Header="标签名称" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GlobalBeginAddress}"
                                                Header="全局起始地址" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GlobalBeginOffset}"
                                                Header="全局起始偏移量" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GetMBAddressTag}"
                                                Header="获取MB地址标签" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GetMEAddressTag}"
                                                Header="获取ME地址标签" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding DataFormat}"
                                                Header="数据格式" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!--  PLC 事件列表  -->
                    <DataGrid x:Name="lvEventConfigPLC"
                              Grid.Row="2"
                              x:DataType="local:MyConfig"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding No}"
                                                Header="序号" />
                            <DataGridTextColumn Width="200"
                                                Binding="{Binding DateValue}"
                                                Header="数据值" />
                            <DataGridTextColumn Width="80"
                                                Binding="{Binding Length}"
                                                Header="长度" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding MBAdr}"
                                                Header="MB地址" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding MEAdr}"
                                                Header="ME地址" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding DTType}"
                                                Header="数据类型" />
                            <DataGridTextColumn Width="160"
                                                Binding="{Binding Mark}"
                                                Header="标识" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding TagName}"
                                                Header="标签名称" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GlobalBeginAddress}"
                                                Header="全局起始地址" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GlobalBeginOffset}"
                                                Header="全局起始偏移量" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GetMBAddressTag}"
                                                Header="获取MB地址标签" />
                            <DataGridTextColumn Width="120"
                                                Binding="{Binding GetMEAddressTag}"
                                                Header="获取ME地址标签" />
                            <DataGridTextColumn Width="100"
                                                Binding="{Binding DataFormat}"
                                                Header="数据格式" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Label Grid.Row="1"
                           Grid.Column="1"
                           VerticalContentAlignment="Center"
                           Background="Green"
                           Content="PC" />
                    <Label Grid.Row="2"
                           Grid.Column="1"
                           VerticalContentAlignment="Center"
                           Background="Blue"
                           Content="PLC" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
